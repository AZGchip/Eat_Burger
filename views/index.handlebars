



<div class="row">
    <div class="col-md-6">
        <h1>Burgers</h1>
        <hr>
        {{#each data}}
        {{#unless eaten}}
        <div class="card mb-3 bg-light" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="/assets/img/download.png" class="card-img" alt="burger image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">{{burger_name}}</h4>
                        <button type="button" class="eat btn btn-secondary" data-id="{{burger_id}}" data-eaten="true">
                            Eat burger
                        </button>
                        <button type="button"class="clean-up btn btn-danger" data-id="{{burger_id}}" data-eaten="true">
                            Throw Away
                        </button>
                        <p class="card-text"><small class="text-muted">Burger #{{burger_id}}</small></p>
                    </div>
                </div>
            </div> 
        </div>

        {{/unless}}
        {{/each}}
    </div>
    <div class="col-md-6">
        <h1>Eaten Burgers</h1>
    <hr>
        {{#each data}}
        {{#if eaten}}
        <div class="card mb-3 bg-light" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="/assets/img/sideplate.jpg" class="card-img" alt="eaten burger image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">{{burger_name}}</h4>
                        <button type="button" class="clean-up btn btn-success" data-id="{{burger_id}}" data-eaten="true">
                            Clean Up
                        </button>
                        <p class="card-text"><small class="text-muted">Burger #{{burger_id}}</small></p>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>